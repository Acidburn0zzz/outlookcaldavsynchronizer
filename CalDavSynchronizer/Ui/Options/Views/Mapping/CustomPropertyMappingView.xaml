<UserControl x:Class="CalDavSynchronizer.Ui.Options.Views.Mapping.CustomPropertyMappingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mapping="clr-namespace:CalDavSynchronizer.Ui.Options.ViewModels.Mapping"
             xmlns:views="clr-namespace:CalDavSynchronizer.Ui.Options.Views"
             mc:Ignorable="d"
             d:DataContext="{x:Static  mapping:CustomPropertyMappingViewModel.DesignInstance}">

  <DockPanel>

    <CheckBox DockPanel.Dock="Top" ToolTip="Map Outlook Custom Properties as X-CALDAVSYNCHRONIZER attributes." IsChecked="{Binding MapCustomProperties}">Map Outlook Custom Properties to X-CALDAVSYNCHRONIZER properties.</CheckBox>
    
    <GroupBox Header="User defined mappings of custom properties">
      <DataGrid ItemsSource="{Binding Mappings}" />
    </GroupBox>

  </DockPanel>
</UserControl>